{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [ "src/**/*", "tests/**/*", "scripts/generate-uuid.ts" ],
  "exclude": ["node_modules", "dist", ".output", "src/web"]
}
